<div>
  <h1>ユーザー登録</h1>
  <%= form_with model: @user, local: true do |form| %>
    <div>
      <%= form.label :avatar_name %>
      <%= form.text_field :avatar_name %>
    </div>
    <div>
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>
    <div>
    <div>
      <%= form.label :area_id %>
      <%= form.collection_select :area_id, Area.all, :id, :address %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>
    <%= form.submit '登録' %>
  <% end %>
</div>